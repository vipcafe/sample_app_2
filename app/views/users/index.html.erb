<% provide(:title, "All users") %>
<h1 style="text-align: center;"><%= t(".all_user") %></h1>
<div style="text-align: center;"><%= will_paginate %></div>
<ul class="users">
	<% @users.each do |user| %>
	<li>
		<%= gravatar_for user, size: 50 %>
		<%= link_to user.name, user %> | 
		<%= link_to user.email, user %> 
		<% if current_user.admin? && !current_user?(user) %>
		 <%= link_to t(".delete"), user, method: :delete, data: {confirm: "You sure delete ?"} , class: "btn btn-danger btn-right"  %>
		<% end %>
	</li>
	<% end %>
</ul>
<div style="text-align: center;"><%= will_paginate %></div>